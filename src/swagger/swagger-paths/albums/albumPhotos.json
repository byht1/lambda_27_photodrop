{
  "/api/albums/${albumId}/photos": {
    "post": {
      "tags": ["Albums"],
      "summary": "Add photo to album",
      "description": "Add photo to album",
      "consumes": ["application/json"],
      "parameters": [
        { "$ref": "#/components/schemas/auth" },
        {
          "name": "albumId",
          "in": "path",
          "description": "Album ID",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        },
        {
          "in": "body",
          "name": "body",
          "description": "JSON-body request",
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "photos": {
                "type": "array",
                "items": {
                  "type": "integer",
                  "example": "filename.png"
                }
              }
            },
            "required": ["photos"]
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Photo successfully added",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "string",
                  "example": "https://photo-drop-ambda.s3.amazonaws.com/watermark/290b3489-e22c-4f06-be85-07ca9d5d62dc/cb7fec06-f66b-4e95-83da-82214a244a83.png"
                }
              }
            }
          }
        },
        "503": {
          "description": "Error uploading file to the cloud. Please try again later."
        },
        "500": {
          "description": "Server error"
        },
        "404": {
          "description": "Album is not exit"
        },
        "403": {
          "description": "Not authorized"
        },
        "400": {
          "description": "Bad Request"
        }
      }
    },
    "get": {
      "tags": ["Albums"],
      "summary": "Get photo for the album",
      "description": "Get photo for the album",
      "consumes": ["application/json"],
      "parameters": [
        { "$ref": "#/components/schemas/auth" },
        {
          "name": "albumId",
          "in": "path",
          "description": "Album ID",
          "required": true,
          "schema": {
            "type": "integer",
            "format": "int64"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Photos",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/photos" }
              }
            }
          }
        },
        "500": {
          "description": "Server error"
        },
        "403": {
          "description": "Not authorized"
        },
        "404": {
          "description": "Album is not exit"
        }
      }
    }
  }
}
