{
  "/api/albums/photos/person": {
    "post": {
      "tags": ["Albums"],
      "summary": "Tag the user in the photo",
      "description": "Tag the user in the photo",
      "consumes": ["application/json"],
      "parameters": [
        { "$ref": "#/components/schemas/auth" },
        {
          "in": "body",
          "name": "body",
          "description": "JSON-body request",
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "photoId": {
                "type": "string",
                "description": "unique photo ID",
                "example": "b6aa1eff-6f05-4531-ab9c-12c63db20279"
              },
              "userId": {
                "type": "string",
                "description": "the unique identifier of the user you want to mark",
                "example": "b6aa1eff-6f05-4531-ab9c-12c63db20279"
              }
            },
            "required": ["photoId", "userId"]
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Photo",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/photos"
              }
            }
          }
        },
        "500": {
          "description": "Server error"
        },
        "404": {
          "description": "Photo is not exit"
        },
        "403": {
          "description": "Not authorized"
        },
        "400": {
          "description": "Bad Request"
        }
      }
    }
  }
}
